<h4>Addresses</h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="225">Recipient</th>
        <th width="350">Address</th>
        <th width="225">Billing?</th>
        <th width="225" align="center">Edit</th>
        <th width="225" align="center">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @customer.addresses.each do |address| %>
        <tr>
          <td><%= address.recipient %></td>
          <td>
            <%= render :partial => "partials/address_info", locals: {address: address} %>
          </td>
          <td align="center"><%= address.is_billing ? "Yes" : "No" %></td>      
          <td>

            <%= link_to(edit_address_path(address), :class => 'btn') do %>
              <i class="material-icons">edit</i>
            <% end %>
          </td>
          <td>
            <%= link_to(address_path(address), method: 'delete', :class => 'btn') do %>
              <i class="material-icons">delete</i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>