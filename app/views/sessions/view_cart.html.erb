<div class="card">
    <div class="card-content">
      <span class="card-title">Cart</span>
      <% if session[:cart].empty? %>
        <p>No items in the cart at this time</p>
      <% else %>
        <table class="striped highlight">
          <thead>
            <th>Name</th>
            <th>Quantity</th>
            <th>Cart Options</th>
          </thead>
          <% session[:cart].each do |item, quantity| %>
            <tr>
              <td><%= Item.find(item).name %></td>
              <td><%= quantity %></td>
              <td><%= link_to(remove_from_cart_path(Item.find(item).id), method: 'get', :class => 'btn') do %>
                  <i class="material-icons">remove_shopping_cart</i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </div>
</div>

<%= link_to new_order_path, class: 'waves-effect waves-light btn' do %>
      &nbsp;Continue with Checkout <%# model_name.pluralize.capitalize %>
<% end %>