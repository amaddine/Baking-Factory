<div class="card">    
  <div class="card-content">
    <%= simple_form_for(@item, local: true, multipart: true) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <div class="form-inputs">
          <%= f.input :name, label_html: { class: 'active' } %>
          <%= f.input :description, label_html: { class: 'active' } %>
          <%= f.input :category, collection: Item::CATEGORIES, include_blank: false %>
          <%= f.input :units_per_item, label_html: { class: 'active' } %>
          <%= f.input :weight, label_html: { class: 'active' }  %>
          <%= f.input :active %>
          <%= f.input :picture %>
        </div>
      </div>
  </div>
</div>
  <div class="row">
    <div class="form-actions col s7">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
