<% if @users.empty? %>
  <h4>No active users at this time.</h4>
<% else %>
  <h4>Active users</h4>
  <table class="table table-striped">
    <thead>
      <th>Username</th>
      <th class="align_center">Role</th>
      <th class="align_center">Active?</th>
      <th class="align_center">Options</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td class="align_center"><%= user.role %></td>
          <td class="align_center"><%= user.active ? "Yes" : "No" %></td>
          <td class="align_center">
            <% if can? :edit, user %>
              <%= link_to edit_user_path(user), :class => 'btn' do %>
                <i class="material-icons">edit</i>
              <% end %> 
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= will_paginate @users, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  
<% end %>
<p>&nbsp;</p>