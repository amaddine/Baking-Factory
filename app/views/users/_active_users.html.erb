<% if @users.empty? %>
  <h4>No active users at this time.</h4>
<% else %>
  <h4>Users</h4>
  <table class="striped highlight">
    <thead>
      <th>Username</th>
      <th class="align_center">Role</th>
      <th class="align_center">Active?</th>
      <th class="align_center">Options</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <% if user.role != 'customer' %>
          <tr>
            <td><%= user.username %></td>
            <td class="align_center"><%= user.role %></td>
            <td class="align_center"><%= user.active ? "Yes" : "No" %></td>
            <td class="align_center">
              <% if can? :edit, user %>
                <%= link_to edit_user_path(user), class: 'tooltipped', 'data-position' => 'bottom', 'data-tooltip' => 'Edit User' do %>

                  <i class="material-icons">edit</i>
                <% end %> 
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>
<p>&nbsp;</p>

